{
	"manifest_version":2,
	"name":"PFiltre",
	"version":"1.0",
    "permissions": [
		"management",
    	"webRequest",
    	"webRequestBlocking",
		"https://poveleceze.pythonanywhere.com/*",
		"https://*/*",
		"http://*/*"
	],
	"background": {
		"scripts": ["background.html","events.js"],
		"persistent": true
	},
	"content_scripts":[
		{
			"matches":[
				"<all_urls>"
			],
			"js":[
				"beforeMain.js"
			]
		}
	],
	"web_accessible_resources":[
		"icons.png",
		"main.js",
		"extractController.js",
		"requests.js",
		"resultController.js",
		"events.js"
	]
}
