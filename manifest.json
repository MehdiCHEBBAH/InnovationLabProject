{
	"manifest_version":2,
	"name":"PFiltre",
	"version":"1.0",
	"icons": { "16": "designs/logo16.png",
		"48": "designs/logo48.png",
	   "128": "designs/logo256.png" },
    "permissions": [
		"management",
    	"webRequest",
    	"webRequestBlocking",
		"https://poveleceze.pythonanywhere.com/*",
		"https://*/*",
		"http://*/*"
	],
	"content_scripts":[
		{
			"matches":[
				"<all_urls>"
			],
			"js":[
				"main.js"
			]
		}
	],
	"web_accessible_resources":[
		"icons.png",
		"main.js",
		"extractController.js",
		"requests.js",
		"resultController.js",
		"events.js"
	]
}
